<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/top_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="1"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/currency_code_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/quantity_text_view"
                    android:text="BTC"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/movement_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/currency_code_text_view"
                    android:src="@drawable/ic_caret_up"
                    android:tint="@color/grey" />

            </RelativeLayout>

            <TextView
                android:id="@+id/valuation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_layout"
                android:layout_marginLeft="8dp"
                android:text="@string/currency_valuation_string"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total_amount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/valuation_text_view"
                android:layout_marginLeft="8dp"
                android:text="@string/currency_holding_invested_string"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/current_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_amount_text_view"
                android:layout_marginLeft="8dp"
                android:text="@string/currency_holding_current_string"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/edit_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit"
                android:tint="@color/grey" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>